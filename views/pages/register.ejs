<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Register</title>
    <link rel='stylesheet' href='stylesheets/register.css'
  </head>
  <body>
    <% include ../partials/top_bar.ejs %>
    <h1> REGISTER </h1>
    <form id ="info_form" method ='post' action='/register'>
      <p id ='msg'><%=message%></p>
      <p>Username:
        <input type="text" placeholder="Username" id="ID_box" name="username"required/>
      </p>
      <p>Password:
        <input type="password" placeholder="Password" id="PW_box" name="pw" required/>
      </p>
      <p>Gmail:
        <input type="email" placeholder="Gmail" id="Gmail_box" name="gmail" required/>
      </p>
      <input type="submit" id="submit_btn" value="Sign-up"/>
    </form>
  </body>
</html>

<script>
  var msg = document.querySelector('#msg');
  if (msg.innerHTML !='')
    {
      alert(msg.innerHTML);
    };
</script>
